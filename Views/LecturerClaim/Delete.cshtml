@model mecca17.Models.get_claims

<h2>Delete Lecturer Claim</h2>

<h3>Are you sure you want to delete this claim?</h3>

<div>
    <h4>@Model.email[0]</h4>
    <hr />
    <dl class="row">

            <dt class="col-sm-2">Module Code</dt>
            <dd class="col-sm-10">@Model.module[0]</dd>
         
        <dt class="col-sm-2">Hours Worked</dt>
        <dd class="col-sm-10">@Model.hours_worked[0]</dd>

            <dt class="col-sm-2">Hourly Rate</dt>
            <dd class="col-sm-10">@Model.rate[0]</dd>


            <dt class="col-sm-2">Total Amount</dt>
            <dd class="col-sm-10">R @Model.total[0]</dd>


        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.description[0]</dd>


       
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" class="btn btn-secondary">Cancel</a>
    </form>
</div>
